{
  "name": "home-ordering",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.1.1",
  "scripts": {
    "dev:server": "pnpm tsx watch --tsconfig tsconfig.node.json server/index.ts",
    "dev:app": "wait-on http://0.0.0.0:3000/healthz && vite",
    "dev": "pnpm run --stream /dev:.*/",
    "build:typecheck": "tsc --noEmit -p tsconfig.app.json && tsc --noEmit -p tsconfig.node.json",
    "build:server": "tsx --tsconfig tsconfig.node.json scripts/build-server.ts",
    "build:app": "vite build",
    "build": "pnpm run build:typecheck && rm -rf dist && pnpm run build:server && pnpm run build:app",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "node dist/index.js",
    "build:docker": " docker build --no-cache -t home-ordering -f docker/app.dockerfile ."
  },
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@hono/zod-validator": "^0.2.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.6.2",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.23.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  }
}
